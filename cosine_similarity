## get cosine similarity!!
import pandas as pd
import numpy as np
from itertools import product

def get_cosine_similarity(u, v):
    
    mask = np.isfinite(u) & np.isfinite(v)
    u = u[mask]
    v = v[mask]

    uvdot = (u*v).sum()
    norm1 = (u ** 2).sum()
    norm2 = (v ** 2).sum()

    score = uvdot / np.sqrt(norm1 * norm2)

    return score

u = np.array([np.nan, 4, 3])
v = np.array([3, 2, 4])

get_cosine_similarity(u, v)

